{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pine",
	"patterns": [
		{
			"include": "#controlkeywords"
		},
		{
			"include": "#operatorkeywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#enum"
		},
		{
			"include": "#brackets"
		}
	],
	"repository": {
		"controlkeywords": {
			"patterns": [{
				"name": "storage.type",
				"match": "\\b(for|in|return|as|and|or|not|throw|import|use|private|where|if|elif|else|break|let|mutable)\\b"
			}, {
				"name": "comment",
				"match": "<[^\\s]+?>"
			}]
		},
		"operatorkeywords": {
			"patterns": [{
				"name": "keyword.control.pine",
				"match": "\\b(def)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pine",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pine",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.pine",
					"match": "\\b[A-Z][a-zA-Z0-9]*\\b"
				}
			]
		},
		"brackets": {
			"patterns": [
				{
					"name": "punctuation.definition",
					"match": "([(]|[)])"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.pine",
					"match": "\\b\\d+([.]\\d+)?(e[+-]?\\d+)?\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.pine",
					"match": "[.]([a-z][a-zA-Z0-9]*)?"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.pine",
					"match": "[a-zA-Z0-9]+"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.pine",
					"match": "//.*"
			}
			]
		},
		"enum": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "[`][a-zA-Z0-9]+"
				}
			]
		}
	},
	"scopeName": "source.pine"
}