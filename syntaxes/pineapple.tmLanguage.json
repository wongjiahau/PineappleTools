{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pineapple",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#functions"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pineapple",
				"match": "\\b(if|elif|else|for|in|let|type|function)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pineapple",
			"begin": "`",
			"end": "`",
			"patterns": [
				{
					"name": "constant.character.escape.pineapple",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type",
					"match": "\\b[A-Z][a-zA-Z0-9]*\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b\\d+([.]\\d+)?(e[+-]?\\d+)?\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b\\d+([.]\\d+)?(e[+-]?\\d+)?\\b"
				}
			]
		}
	},
	"scopeName": "source.pine"
}