{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pine",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pine",
				"match": "\\b(if|elif|else|is|isnt|and|or|loop|break|for|in|let|type|function|mutable)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pine",
			"begin": "`",
			"end": "`",
			"patterns": [
				{
					"name": "constant.character.escape.pine",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.pine",
					"match": "\\b[A-Z][a-zA-Z0-9]*\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.pine",
					"match": "\\b\\d+([.]\\d+)?(e[+-]?\\d+)?\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.pine",
					"match": "[:][a-z][a-zA-Z0-9]*[:]"
				},
				{
					"name": "entity.name.function.pine",
					"match": "\\b[a-z][a-zA-Z0-9]*[:]"
				},
				{
					"name": "entity.name.function.pine",
					"match": "[:][a-z][a-zA-Z0-9]*\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.pine",
					"match": "[a-z][a-zA-Z0-9]*"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.pine",
					"match": "//.*"
				}
			]
		}
	},
	"scopeName": "source.pine"
}